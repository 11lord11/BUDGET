<Window x:Class="BudgetApp.AddNewTypeRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp"
        mc:Ignorable="d"
        Title="AddNewTypeRecord" Width="300" Height="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="Введите тип добавляемой записи" VerticalContentAlignment="Center" HorizontalAlignment="Center"></Label>
        <TextBox x:Name="NewRecord" VerticalContentAlignment="Center" Grid.Row="1"></TextBox>
        <Button Grid.Row="2" Content="Добавить новый тип" Click="Button_Click"></Button>
    </Grid>
</Window>
